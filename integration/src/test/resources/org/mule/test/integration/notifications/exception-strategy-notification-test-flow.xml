<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd">

    <object name="notificationLogger" class="org.mule.test.core.context.notification.ErrorHandlerNotificationLogger"/>

    <notifications>
        <notification-listener ref="notificationLogger"/>
    </notifications>

    <flow name="catch-es">
        <raise-error type="APP:EXPECTED"/>
        <error-handler>
            <on-error-continue>
                <logger/>
            </on-error-continue>
        </error-handler>
    </flow>

    <flow name="rollback-es">
        <raise-error type="APP:EXPECTED"/>
        <error-handler>
            <on-error-continue type="REDELIVERY_EXHAUSTED">
                <logger/>
            </on-error-continue>
            <on-error-propagate>
                <logger/>
            </on-error-propagate>
        </error-handler>
    </flow>

    <flow name="choice-es">
        <raise-error type="APP:EXPECTED"/>
        <error-handler>
            <on-error-continue type="REDELIVERY_EXHAUSTED">
                <logger/>
            </on-error-continue>
            <on-error-propagate when="#[mel:exception.causedBy(java.io.IOException)]">
                <logger/>
            </on-error-propagate>
            <on-error-continue>
                <logger/>
            </on-error-continue>
        </error-handler>
    </flow>

    <flow name="default-es">
        <raise-error type="APP:EXPECTED"/>
    </flow>
</mule>
