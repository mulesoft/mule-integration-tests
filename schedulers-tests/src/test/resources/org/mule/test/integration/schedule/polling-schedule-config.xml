<?xml version="1.0" encoding="utf-8"?>
<mule xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:test="http://www.mulesoft.org/schema/mule/test"
      xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
      xsi:schemaLocation="
               http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
               http://www.mulesoft.org/schema/mule/test http://www.mulesoft.org/schema/mule/test/current/mule-test.xsd">

    <flow name="echo">
        <set-payload value="foo"/>
    </flow>

    <flow name="pollfoo">
        <scheduler doc:name="watermark">
            <scheduling-strategy>
                <fixed-frequency frequency="${frequency.millis}"/>
            </scheduling-strategy>
        </scheduler>
        <flow-ref name="echo"/>
        <test:processor>
            <test:callback class="org.mule.test.integration.schedule.PollScheduleTestCase$Foo"/>
        </test:processor>
    </flow>

    <flow name="pollbar">
        <scheduler>
            <scheduling-strategy>
                <fixed-frequency frequency="1000"/>
            </scheduling-strategy>
        </scheduler>
        <set-payload value="bar"/>
        <test:processor>
            <test:callback class="org.mule.test.integration.schedule.PollScheduleTestCase$Bar"/>
        </test:processor>
    </flow>

    <flow name="pollbarNever">
        <scheduler>
            <!-- Will not run unless my test takes 200 days -->
            <scheduling-strategy>
                <fixed-frequency frequency="${frequency.days}" timeUnit="DAYS" startDelay="200"/>
            </scheduling-strategy>
        </scheduler>
        <set-payload value="barNever"/>
        <test:processor>
            <test:callback class="org.mule.test.integration.schedule.PollScheduleTestCase$Bar"/>
        </test:processor>
    </flow>
</mule>