<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.mule.runtime</groupId>
    <artifactId>mule</artifactId>
    <version>4.2.1-20210222</version>
  </parent>
  <groupId>org.mule.tests</groupId>
  <artifactId>mule-extensions-integration-tests</artifactId>
  <version>4.2.1-20210222</version>
  <packaging>pom</packaging>
  <name>Mule Tests</name>

  <modules>
    <module>performance</module>
    <module>integration</module>
    <module>dsl</module>
    <module>soap-connect</module>
    <module>oauth</module>
    <module>schedulers-tests</module>
    <module>mule-test-smart-connectors-parent</module>
    <module>munit-tests</module>
    <module>extensions-xml-support</module>
    <module>logging</module>
  </modules>

  <properties>
    <muleSchedulerServiceTestVersion>1.2.6</muleSchedulerServiceTestVersion>
    <muleHttpServiceTestVersion>1.4.14</muleHttpServiceTestVersion>
    <muleOAuthServiceTestVersion>1.3.1</muleOAuthServiceTestVersion>
    <muleSoapServiceTestVersion>1.2.0</muleSoapServiceTestVersion>
    <muleExtensionTestSoapTestVersion>1.2.0</muleExtensionTestSoapTestVersion>

    <muleSpringModuleTestVersion>1.3.0</muleSpringModuleTestVersion>
    <muleValidationModuleTestVersion>1.4.0</muleValidationModuleTestVersion>
    <muleScriptingModuleTestVersion>1.1.6</muleScriptingModuleTestVersion>
    <muleFileCommonsTestVersion>1.2.1</muleFileCommonsTestVersion>

    <muleHttpConnectorTestVersion>1.5.4</muleHttpConnectorTestVersion>
    <muleVmConnectorTestVersion>2.0.0</muleVmConnectorTestVersion>
    <muleFileConnectorTestVersion>1.2.4</muleFileConnectorTestVersion>
    <muleObjectStoreConnectorTestVersion>1.1.3</muleObjectStoreConnectorTestVersion>
    <muleJavaModuleTestVersion>1.2.2</muleJavaModuleTestVersion>
    <muleAggregatorsModuleTestVersion>1.0.1</muleAggregatorsModuleTestVersion>
    <muleDbConnectorTestVersion>1.5.3</muleDbConnectorTestVersion>
    <muleFtpConnectorTestVersion>1.3.0</muleFtpConnectorTestVersion>
    <muleJmsConnectorTestVersion>1.5.0</muleJmsConnectorTestVersion>
    <muleWscConnectorTestVersion>1.3.1</muleWscConnectorTestVersion>
    <muleOauthModuleTestVersion>1.1.8</muleOauthModuleTestVersion>
    <muleSocketsConnectorTestVersion>1.1.5</muleSocketsConnectorTestVersion>

    <munitExtensionsMavenPlugin>1.0.0-BETA2</munitExtensionsMavenPlugin>

    <apacheHttpCoreVersion>4.4.6</apacheHttpCoreVersion>
    <apacheHttpClientVersion>4.5.3</apacheHttpClientVersion>
    <springVersion>5.1.6.RELEASE</springVersion>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-site-plugin</artifactId>
        <configuration>
          <skip>true</skip>
          <skipDeploy>true</skipDeploy>
        </configuration>
      </plugin>
    </plugins>

    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>com.mulesoft.munit</groupId>
          <artifactId>munit-extensions-maven-plugin</artifactId>
          <version>${munitExtensionsMavenPlugin}</version>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.mule.services</groupId>
      <artifactId>mule-service-weave</artifactId>
      <classifier>mule-service</classifier>
      <scope>provided</scope>
    </dependency>
  </dependencies>

  <repositories>
    <repository>
      <id>mule</id>
      <name>Mule Repository</name>
      <url>https://repository.mulesoft.org/nexus/content/repositories/public/</url>
    </repository>
    <repository>
      <id>spring-snapshot</id>
      <name>Spring Snapshot Repository</name>
      <url>http://repo.spring.io/snapshot/</url>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <id>mule-plugin</id>
      <name>Mule Repository</name>
      <url>https://repository.mulesoft.org/nexus/content/repositories/public/</url>
    </pluginRepository>
  </pluginRepositories>

  <profiles>
    <profile>
      <id>release</id>
      <properties>
        <skipNoSnapshotsEnforcerPluginRule>false</skipNoSnapshotsEnforcerPluginRule>
      </properties>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-enforcer-plugin</artifactId>
            <version>${maven.enforcer.plugin.version}</version>
            <executions>
              <execution>
                <id>enforce-no-snapshots-in-deps</id>
                <goals>
                  <goal>enforce</goal>
                </goals>
                <configuration>
                  <rules>
                    <requireReleaseDeps>
                      <message>No Snapshots Allowed in Deps!</message>
                      <excludes>
                        <exclude>com.mulesoft.munit:*</exclude>
                          <exclude>org.mule.weave:*</exclude>
                          <exclude>org.mule.services:*</exclude>
                          <exclude>org.mule.tools.maven:mule-classloader-model</exclude>
                          <exclude>org.mule.modules:mule-module-cors-kernel</exclude>
                      </excludes>
                    </requireReleaseDeps>
                    <requireReleaseVersion>
                      <message>No Snapshots Allowed in Project Version!</message>
                    </requireReleaseVersion>
                    <requirePluginVersions>
                      <message>Best Practice is to always define plugin versions!</message>
                      <unCheckedPluginList>
                        org.apache.maven.plugins:maven-clean-plugin
                      </unCheckedPluginList>
                    </requirePluginVersions>
                  </rules>
                  <skip>${skipNoSnapshotsEnforcerPluginRule}</skip>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
